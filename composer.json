{
	"name": "wmde/fundraising-frontend",
	"description": "WMDE fundraising application (end user facing part)",
	"require": {
		"php": ">=7.0",
		"ext-intl": "*",

		"silex/silex": "~1.3",
		"twig/twig": "~1.23",
		"pimple/pimple": "~1.0",

		"jeroen/file-fetcher": "~3.1",
		"wmde/fundraising-store": "~2.0@dev",
		"addwiki/mediawiki-api-base": "~2.1",
		"psr/log": "~1.0",
		"monolog/monolog": "~1.17",
		"swiftmailer/swiftmailer": "~5.4",
		"symfony/translation": "^3.0",
		"symfony/twig-bridge": "^3.0",
		"twig/extensions": "^1.3"
	},
	"require-dev": {
		"ext-pdo_sqlite": "*",

		"phpunit/phpunit": "~5.2",
		"codeception/specify": "~0.4.3",
		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.4",
		"squizlabs/php_codesniffer": "~2.2",
		"mediawiki/mediawiki-codesniffer": "~0.6.0",
		"phpmd/phpmd": "~2.3",

		"symfony/browser-kit": "~2.7",
		"mikey179/vfsStream": "~1.6",
		"silex/web-profiler": "~1.0",
		"sorien/silex-dbal-profiler": "~1.1"
	},
	"autoload": {
		"psr-4": {
			"WMDE\\Fundraising\\Frontend\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"WMDE\\Fundraising\\Frontend\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"vendor/bin/phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"@phpcs"
		],
		"ci": [
			"@test",
			"@cs",
			"npm run ci"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
